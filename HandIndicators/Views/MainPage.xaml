                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Grid.ColumnSpan="5" Margin="0,10">
                        <Label Content="ATD:"/>
                        <TextBox Width="150" Style="{StaticResource FillTextBox}" Text="{Binding ATDL}"/>
                    </StackPanel>

                    <GroupBox Header="L1" Height="110" Grid.Row="1" Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="PI"/>
                            <TextBox Grid.Column="1" Style="{StaticResource FillTextBox}" Text="{Binding FingerL1.PI,Mode=TwoWay}"/>

                            <Label Content="CAP" Grid.Row="1"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Style="{StaticResource FillTextBox}" Text="{Binding FingerL1.CAP,Mode=TwoWay}"/>

                            <ComboBox Grid.Row="2" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0,5" IsEditable="True" SelectedItem="{Binding FingerL1.Type,Mode=TwoWay}">
                                <ComboBoxItem>U</ComboBoxItem>
                                <ComboBoxItem>A</ComboBoxItem>
                                <ComboBoxItem>W</ComboBoxItem>
                            </ComboBox>
                        </Grid>
