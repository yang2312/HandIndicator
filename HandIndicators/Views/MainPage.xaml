                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="T = "/>
                        <Label Content="{Binding IndicatorResult.T_PB}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
