                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Năng lực" Style="{StaticResource ReportGroup}" Grid.Column="1">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="NL = "/>
