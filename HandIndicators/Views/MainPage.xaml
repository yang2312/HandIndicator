                            <ComboBox Grid.Row="2" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0,5" IsEditable="True" SelectedItem="{Binding FingerR3.Type,Mode=TwoWay}">
                                <ComboBoxItem>A</ComboBoxItem>
                                <ComboBoxItem>B</ComboBoxItem>
                                <ComboBoxItem>C</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="R4" Height="110" Margin="10,0,0,0" Grid.Row="1" Grid.Column="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="PI"/>
                            <TextBox Grid.Column="1" Style="{StaticResource FillTextBox}" Text="{Binding FingerR4.PI,Mode=TwoWay}"/>

