            </GroupBox>

            <GroupBox Header="8 TMTĐ" Style="{StaticResource ReportGroup}" Grid.Row="1" Grid.Column="3">
                <ListView ItemTemplate="{StaticResource CustomItemTemplate}"/>
            </GroupBox>

            <GroupBox Header="VAKBĐ" Style="{StaticResource ReportGroup}" Grid.Row="2" Grid.Column="1">
