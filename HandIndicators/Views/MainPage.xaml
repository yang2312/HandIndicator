                                <ComboBoxItem>A</ComboBoxItem>
                                <ComboBoxItem>B</ComboBoxItem>
                                <ComboBoxItem>C</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="R5" Height="110" Margin="10,0,0,0" Grid.Row="1" Grid.Column="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="PI"/>
                            <TextBox Grid.Column="1" Style="{StaticResource FillTextBox}" Text="{Binding FingerR5.PI,Mode=TwoWay}"/>

                            <Label Content="CAP" Grid.Row="1"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Style="{StaticResource FillTextBox}" Text="{Binding FingerR5.CAP,Mode=TwoWay}"/>

                            <ComboBox Grid.Row="2" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0,5" IsEditable="True" SelectedItem="{Binding FingerR5.Type,Mode=TwoWay}">
                                <ComboBoxItem>A</ComboBoxItem>
                                <ComboBoxItem>B</ComboBoxItem>
                                <ComboBoxItem>C</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </Grid>

        <Border Grid.Row="2" HorizontalAlignment="Stretch" BorderBrush="Gray" BorderThickness="1"/>

        <!--Report-->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Số liệu" Style="{StaticResource ReportGroup}" Grid.RowSpan="3">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="TFRC = "/>
                        <Label Content="{Binding IndicatorResult.TFRC}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="TAFRC = "/>
                        <Label Content="{Binding IndicatorResult.TAFRC}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Tổng %L = "/>
                        <Label Content="{Binding IndicatorResult.SumPercentL}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Tổng %R = "/>
                        <Label Content="{Binding IndicatorResult.SumPercentR}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="TR/I = "/>
                        <Label Content="{Binding IndicatorResult.SumRI}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="R/I L1 = "/>
                        <Label Content="{Binding IndicatorResult.RIL1}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
